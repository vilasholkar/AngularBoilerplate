@import url('https://fonts.googleapis.com/css?family=Poppins');
@import'./variables.scss';
html,
body {
    width: 100%;
    height: 100%;
    font-family: 'Poppins', sans-serif !important;
    cursor: pointer;
}

/* changing Bootstrap CSS starts */

@media (min-width: 992px) {
    .modal-lg {
        max-width: 90% !important;
    }
}

.modal-body {
    max-height: 81vh;
    overflow: overlay;
}

.btn-primary {
    background-color: $mainColor !important;
    border-color: $mainColor !important;
    color: $white !important;
}

.btn-outline-primary {
    border-color: $mainColor !important;
    color: $mainColor !important;
}

.btn-outline-primary:not(:disabled):not(.disabled).active,
.btn-outline-primary:not(:disabled):not(.disabled):active,
.btn-outline-primary:not(:disabled):not(.disabled).hover,
.btn-outline-primary:not(:disabled):not(.disabled):hover,
.show>.btn-outline-primary.dropdown-toggle {
    color: $white !important;
    background-color: $mainColor !important;
    border-color: $mainColor !important;
}

::-webkit-scrollbar {
        width: 5px;
        height: 5px;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px $darkGrey;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: $mainColor;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: $mainColor;
}

/* changing Bootstrap CSS Ends */

/* CSS for ng-scrollbar starts */

[thick=true] .ng-spinner-icon {
    width: 10em !important;
    height: 10em !important;
    border-width: 1em !important;
    top: 50vh;
    position: fixed;
    left: 50%;
    border-top-color: $mainColorLoaderBorder !important;
    border-right-color: $mainColorLoaderBorder !important;
    border-bottom-color: $mainColorLoaderBorder !important;
    border-left-color: $mainColor !important;
}

.ng-spinner {
    display: block;
    position: fixed;
    z-index: 1031;
    top: 0px !important;
    background-color: $backdropColor;
    width: 100%;
    height: 100vh;
    right: 0 !important;
}

/* CSS for ng-scrollbar ends */